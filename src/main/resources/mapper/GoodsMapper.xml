<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qfedu.yiguo.dao.GoodsDao">

    <select id="findById" resultType="com.qfedu.yiguo.entity.Goods">
        select * from goods where id = #{id};
    </select>

    <select id="findAllR" resultType="com.qfedu.yiguo.entity.Goods">
        select * from goods where code = 1;
    </select>

    <select id="findByName" resultType="com.qfedu.yiguo.entity.Goods">
        select * from goods where goodsName = #{goodsName}
    </select>

</mapper>